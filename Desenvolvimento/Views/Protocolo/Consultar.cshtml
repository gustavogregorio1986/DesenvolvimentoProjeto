@model List<ProtocoloModel>
@{
    ViewData["Title"] = "Consultar Protocolo";
}

<div class="text-center">
    <h2 class="display-4">Consultar Protocolo</h2>
</div>

  <br/>

    @if(TempData["MensagemSucesso"] != null)
    {
         <div class="alert alert-success" role="alert">
           <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
           @TempData["MensagemSucesso"]
        </div>   
    }

    @if(TempData["MensagemErro"] != null)
    {
         <div class="alert alert-success" role="alert">
           <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
           @TempData["MensagemErro"]
        </div>   
    }

    <br/>


<table class="table" id="table-protocolos">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">E-mail</th>
      <th scope="col">Numero Protocolo</th>
      <th scope="col">Tipo</th>
      <th scope="col">Data do protocolo</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @if(Model != null && Model.Any())
    {
        foreach(var protocolo in Model)
        {
              <tr>
                <th scope="row">@protocolo.Id</th>
                <td>@protocolo.Nome</td>
                <td>@protocolo.Email</td>
                <td>@protocolo.NumProtocolo</td>
                <td>@protocolo.Tipo</td>
                <td>@protocolo.DataProtocolo</td>
                <td>
                  <a role="button" asp-controller="Protocolo" asp-action="Editar" asp-route-id="@protocolo.Id" class="btn btn-primary">Editar</a>
                  <a role="button" asp-controller="Protocolo" asp-action="ApagarConfirmacao" asp-route-id="@protocolo.Id" class="btn btn-danger">Apagar</a>
              </td>
            </tr>        
        }
    }
  </tbody>
</table>